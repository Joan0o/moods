<svg id="svg" viewbox="0 0 120 120">
  <g id="face" transform="translate(60 60)">
    <circle id="facecircle" cx="0" cy="0" r="50" stroke="#000000" stroke-width="2" fill="#ffffff"/>
    <circle cx="-20" cy="-10" r="5" fill="#000000"/>
    <circle cx="20" cy="-10" r="5" fill="#000000"/>

    <g id="smile" transform="translate(0, 25)">
      <path id="smilepath" fill="none" stroke="#000000" stroke-width="3" stroke-linecap="round"
            d="M-20,-10 C-20,10 20,10 20,-10"/>
    </g>
  </g>
</svg>
<div class="slidecontainer">
  <input type="range" id="myRange"
         onmousedown={{action "startMoodChange"}}
         onmouseup={{action "endMoodChange"}}
         oninput={{action "change_mood"}}
         min="1"
         max="100"
         steps="1">
</div>
<div>
  <p><a href="https://github.com/dwmkerr/svg-smile">github.com/dwmkerr/svg-smile</a></p>
</div>